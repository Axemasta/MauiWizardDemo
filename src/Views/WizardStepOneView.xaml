<?xml version="1.0" encoding="utf-8" ?>

<controls:WizardView
    x:Class="WizardDemo.Views.WizardStepOneView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:WizardDemo.Controls"
    xmlns:fa="clr-namespace:FontAwesome"
    Title="Step One">
    <VerticalStackLayout
        Padding="20,0"
        HorizontalOptions="Center"
        Spacing="20"
        VerticalOptions="Center">
        <Image>
            <Image.Source>
                <FontImageSource
                    FontFamily="FASolid"
                    Glyph="{x:Static fa:FontAwesomeIcons.HatWizard}"
                    Size="100"
                    Color="{StaticResource Primary}" />
            </Image.Source>
        </Image>
        <Label
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Wizard Steps Control Demo"
            TextColor="{StaticResource Primary}" />
        <Label Text="This is a sample app based on Redth's blog post about creating a step by step wizard control in Maui. I was interested in the blog and wanted to investigate its implementation, and see how extensible the idea is." />
    </VerticalStackLayout>
</controls:WizardView>